<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="empsys" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>jdbc/empsys</jta-data-source>
    <class>com.kenmcwilliams.employmentsystem.orm.Candidate</class>
    <class>com.kenmcwilliams.employmentsystem.orm.Company</class>
    <class>com.kenmcwilliams.employmentsystem.orm.Opportunity</class>
    <class>com.kenmcwilliams.employmentsystem.orm.Qual</class>
    <class>com.kenmcwilliams.employmentsystem.orm.QualLine</class>
    <class>com.kenmcwilliams.employmentsystem.orm.QualTerm</class>
    <class>com.kenmcwilliams.employmentsystem.orm.Resume</class>
    <class>com.kenmcwilliams.employmentsystem.orm.ResumePoint</class>
    <class>com.kenmcwilliams.employmentsystem.orm.Role</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <!-- property name="org.hibernate.service.jta.platform.spi.JtaPlatform" value="org.hibernate.transaction.SunONETransactionManagerLookup"/-->
      <!--property name="hibernate.transaction.jta.platform" value="org.hibernate.transaction.SunONETransactionManagerLookup"/-->
      <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform"/> 
      <!-- <property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform"/>-->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect"/>
      <!-- <property name = "hibernate.show_sql" value = "true" /> -->
    </properties>
  </persistence-unit>
</persistence>
